<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/andSkin"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_skin_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.rrtoyewx.andskin.activity.ChangeSkinConfigActivity">

    <Button
        android:id="@+id/btn_change_skin_local_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载应用内Red主题"
        android:textColor="@color/color_btn_change_config_selector"
        skin:enable="true" />

    <Button
        android:id="@+id/btn_change_skin_local_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载应用内Green主题"
        android:textColor="@color/color_btn_change_config_selector"
        skin:enable="true" />

    <Button
        android:id="@+id/btn_change_skin_plugin_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载外部blue主题"
        android:textColor="@color/color_btn_change_config_selector"
        skin:enable="true" />

    <Button
        android:id="@+id/btn_restore_default_skin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="还原默认的主题"
        android:textColor="@color/color_btn_change_config_selector"
        skin:enable="true" />

</LinearLayout>
