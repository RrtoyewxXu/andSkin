<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/andSkin"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    skin:enable="true"
    tools:context="com.rrtoyewx.andskin.activity.MainActivity">

    <Button
        android:id="@+id/btn_main_change_local_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="改变主题通过本地的方式 -- blue" />

    <Button
        android:id="@+id/btn_main_change_local_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="改变主题通过本地的方式 -- red" />

    <Button
        android:id="@+id/btn_main_change_plugin_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="改变主题通过插件的方式 -- yellow" />

    <Button
        android:id="@+id/btn_main_change_plugin_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="改变主题通过插件的方式 -- green" />

    <Button
        android:id="@+id/btn_main_restore_skin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="回复默认皮肤" />

    <Button
        android:id="@+id/btn_main_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击出错：无访问资源" />

    <Button
        android:id="@+id/btn_main_test_color_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bg_btn_selector"
        skin:enable="true"
        android:text="测试color selector" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_main_change_local">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/img_main"
                skin:enable="true" />

            <TextView
                android:id="@+id/tv_main_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                skin:enable="true" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
